<Page x:Class="mooncalendar.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mooncalendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="#FF21179C">
        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="Здесь ваши заметки" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="TextFromSave1" HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="305" Height="83" TextChanged="TextFromSave1_TextChanged"/>
        <TextBox x:Name="TextFromSave2" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" Width="305" Height="82" TextChanged="TextFromSave2_TextChanged"/>
        <TextBox x:Name="TextFromSave3" HorizontalAlignment="Center" Margin="0,0,0,85" TextWrapping="Wrap"  VerticalAlignment="Bottom" Width="305" Height="83" TextChanged="TextFromSave3_TextChanged"/>

    </Grid>
</Page>
